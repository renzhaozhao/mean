/** 颜色 */
@white: white;
@black: #0e0e0e;
@red: #df3932;
@green: #1db586;
@blue: #6699cc;
@pink: #fb5672;
@purple: #4e354e;
@yellow: #fe9b0d;
@orange: #f7660e;

@snow: #f6eee9;
@light-gray: #999999;
@dark-gray: #333333;


/** 字体 */
@font-size: 14px;
@font-small: @font-size - 2;
@font-tiny: @font-small - 2;
@font-big: @font-size + 2;
@font-large: @font-size + 4;
@font-huge: @font-large + 4;
// @font-family: "Helvetica Neue",Helvetica,Arial,sans-serif;
@font-family: "microsoft YaHei", Arial, sans-serif;
@font-color: @light-gray;

/** 喜闻乐见 */
@el-back-color: @orange;
@el-front-color: @white;
@el-border-width: 1px;
@el-border-radius: 2px;
@el-border-color: #dddddd;

/** 网页变量 */
@container-width: 1000px;
@selected: e("active");