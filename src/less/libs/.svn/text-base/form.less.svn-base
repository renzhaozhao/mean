@import "config.less";

.pure-form{
    @inline-margin-left: 11.3em;

    input[type="text"],
    input[type="number"],
    input[type="tel"],
    input[type="email"],
    input[type="password"]{
        border: @el-border-width solid @el-border-color;
        border-radius: 0;
        box-shadow: none;
    }

    select{
        width: 12em;
        padding: 0 .5em;
        border: 1px solid @el-border-color;
        box-shadow: none;
        border-radius: 0;
    }

    .static-text{
        display: inline-block;
        vertical-align: middle;
    }

    .pure-control-group{
        margin-bottom: 2em;

        img{
            cursor: pointer;
        }

        .icon-input{
            display: inline-block;
            border: 1px solid @el-border-color;
            border-top-width: 2px;
            padding-left: 1em;
            border-radius: 5px;

            & > input{
                border: none;
                width: 200px;
            }
        }
        .text-input{
            border: 1px solid @el-border-color;
            box-shadow: 0 1px 5px @el-border-color;
            border-radius: 1px;
            height: 43px;

            & > label{
                width: 64px;
                display: block;
                background-color: #f7f7f7;
                border-right: 1px solid @el-border-color;
                margin: 0;
                float: left;
                height: 41px;
                text-align: center;
                line-height: 41px;
            }
            & > input{
                padding: 1em;
                height: 41px;
                border: none;
                width: 232px;
            }
        }
        .verify-img{
            .border-img{
                border: 1px solid @el-border-color;
                box-shadow: 0 1px 5px @el-border-color;
                border-radius: 1px;
                height: 43px;
                width: 200px;
                display: inline-block;

                & > label{
                    width: 64px;
                    display: block;
                    background-color: #f7f7f7;
                    border-right: 1px solid @el-border-color;
                    margin: 0;
                    float: left;
                    height: 41px;
                    text-align: center;
                    line-height: 41px;
                }
                & > input{
                    padding: 1em;
                    height: 41px;
                    border: none;
                    width: 132px;
                }
            }            
        }
        .verify-tel{
            border: 1px solid @el-border-color;
            box-shadow: 0 1px 5px @el-border-color;
            border-radius: 1px;
            height: 43px;
            background-color: #f7f7f7;

            & > label{
                width: 64px;
                display: block;
                background-color: #f7f7f7;
                border-right: 1px solid @el-border-color;
                margin: 0;
                float: left;
                height: 41px;
                text-align: center;
                line-height: 41px;
            }
            & > input{
                padding: 1em;
                height: 41px;
                border: none;
                width: 132px;
                float: left;
                border-right: 1px solid @el-border-color;
            }
            & > button{
                width: 96px;
                height: 41px;
                background: none;
                box-shadow: none;
                border: none;
                text-align: center;
                outline: none;
            }
        }
    }

    

    .control-helps{
        margin: 0 0 0 @inline-margin-left;
    }

    .pure-controls{
        margin-left: 8.3em;
        margin-top: 4em;
    }

    

    .verify-img1{
        display: inline-block;
        vertical-align: middle;

        & >  .icon-input{

            input{
                width: 80px;
            }

        }
        & > img{
            width: 6em;
            height: 2.3em;
            display: inline-block;
            vertical-align: middle;
            cursor: pointer;
        }
    }
}
