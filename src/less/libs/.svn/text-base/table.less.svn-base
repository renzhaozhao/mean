@import "config.less";

.pure-table{
    width: 100%;
    color: @font-color;
    border: none;
    font-size: 12px;

    & > thead{
        color: darken(@font-color, 10%);
        background-color: @el-border-color;

        th{
            border-left-width: 0;
            text-align: center;
        }
    }

    & > tbody{
        tr{
            border-bottom: 1px solid @el-border-color;

            &:last-child{
                border-bottom-width: 0;
            }

            td{
                border-left-width: 0;
                padding: 1em;
                text-align: center;
                &:first-child{
                   /*  width: 8em; */
                }
            }
        }
    }
}
